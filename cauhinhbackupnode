echo "ğŸš€ ÄANG Cáº¤U HÃŒNH Há»† THá»NG BACKUP SIÃŠU NHáº¸ (KHÃ”NG NÃ‰N)..."

# 1. CÃ i Ä‘áº·t Rclone & Unzip
sudo apt-get update -qq >/dev/null 2>&1
sudo apt-get install -y unzip curl >/dev/null 2>&1
curl https://rclone.org/install.sh | sudo bash >/dev/null 2>&1

# 2. Táº¡o file cáº¥u hÃ¬nh Rclone
mkdir -p /root/.config/rclone
cat << EOF > /root/.config/rclone/rclone.conf
[gdrive]
type = drive
scope = drive
token = $MY_TOKEN
EOF

# 3. Táº¡o Script Backup thÃ´ng minh (ÄÃƒ Tá»I Æ¯U CPU)
cat << 'EOF' > /root/auto_backup.sh
#!/bin/bash
RCLONE_REMOTE="gdrive:Mysterium_Backups"
LOCAL_TEMP="/tmp/myst_backups"
NODE_IDS=(1 2) 

mkdir -p "$LOCAL_TEMP"

backup_node() {
    local ID=$1
    local VOL="myst-data$ID"
    local NET="my_network_$ID"
    
    PUBLIC_IP=$(docker run --rm --network "$NET" curlimages/curl:latest -s --max-time 10 https://api.ipify.org)
    [ -z "$PUBLIC_IP" ] && PREFIX="Unknown_myst$ID" || PREFIX="${PUBLIC_IP}_myst$ID"
    
    # Äá»”I THÃ€NH .tar (KHÃ”NG NÃ‰N)
    FILENAME="${PREFIX}_$(date +%F).tar"
    
    if docker volume inspect "$VOL" >/dev/null 2>&1; then
        echo "ğŸ“¦ Äang xá»­ lÃ½ $VOL (Low CPU Mode)..."
        # Bá» CHá»® 'z' TRONG tar czf -> CHá»ˆ CÃ’N tar cf
        docker run --rm -v "$VOL":/data:ro -v "$LOCAL_TEMP":/backup alpine tar cf "/backup/$FILENAME" -C /data .
        
        rclone copy "$LOCAL_TEMP/$FILENAME" "$RCLONE_REMOTE"
        rm -f "$LOCAL_TEMP/$FILENAME"
        echo "âœ… ÄÃ£ lÃªn Google Drive: $FILENAME"
    fi
}

# THÃŠM nice -n 19: Ã‰p script cháº¡y á»Ÿ má»©c Æ°u tiÃªn tháº¥p nháº¥t Ä‘á»ƒ khÃ´ng lÃ m lag Node
nice -n 19 bash -c "$(declare -f backup_node); for id in ${NODE_IDS[@]}; do backup_node \$id; done"
EOF

chmod +x /root/auto_backup.sh

# 4. Cháº¡y thá»­ nghiá»‡m
echo "â³ Äang cháº¡y thá»­ láº§n Ä‘áº§u..."
/root/auto_backup.sh

echo "----------------------------------------------------------------"
echo "ğŸ‰ XONG! Rclone Ä‘Ã£ sáºµn sÃ ng vá»›i cháº¿ Ä‘á»™ KHÃ”NG NÃ‰N."
echo "ğŸ‘‰ Muá»‘n backup thá»§ cÃ´ng: /root/auto_backup.sh"
