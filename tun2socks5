"socks5h://156.239.219.187:1339"
"socks5h://156.239.214.181:1339"
"socks5h://156.239.217.223:1339"
"socks5h://156.239.217.246:1339"
)


# Base t√™n container
TUN_NAME_BASE="tun"

# Image
IMG_TUN="xjasonlyu/tun2socks:v2.6.0"

# Log level cho tun2socks: debug | info | warn | error
TUN_LOGLEVEL="info"

# MTU tu·ª≥ ch·ªçn (ƒë·ªÉ tr·ªëng = m·∫∑c ƒë·ªãnh). N·∫øu timeout, th·ª≠ 1400.
TUN_MTU=""

# DNS trong namespace c·ªßa tun2socks:
# - N·∫øu d√πng socks5h (DNS qua proxy), ƒë·∫∑t nameserver b·∫•t k·ª≥ public resolver (s·∫Ω ƒë∆∞·ª£c proxy ho√°).
# - N·∫øu socks5 (DNS kh√¥ng qua proxy), DNS v·∫´n ƒëi qua ƒë∆∞·ªùng tun (tu·ª≥ extra rules), nh∆∞ng c√≥ th·ªÉ b·ªã ch·∫∑n.
TUN_RESOLVER="1.1.1.1"

# ===================== PRECHECK =====================
command -v docker >/dev/null 2>&1 || { echo "[ERR] C·∫ßn Docker."; exit 1; }

# Linux c·∫ßn /dev/net/tun
if [[ ! -e /dev/net/tun ]]; then
  echo "[INFO] T·∫°o /dev/net/tun..."
  sudo mkdir -p /dev/net || true
  sudo mknod /dev/net/tun c 10 200 || true
  sudo chmod 600 /dev/net/tun || true
fi

# ===================== HELPERS =====================
validate_socks() {
  local u="$1"
  # H·ªó tr·ª£:
  #  - socks5://ip:port
  #  - socks5h://ip:port
  #  - socks5://user:pass@ip:port
  #  - socks5h://user:pass@ip:port
  [[ "$u" =~ ^socks5(h)?://([^/@:]+:[^/@]+@)?([0-9]{1,3}\.){3}[0-9]{1,3}:[0-9]+$ ]]
}

probe_proxy() {
  local u="$1"
  # Th·ª≠ TCP connect t·ªõi Google (8 gi√¢y)
  curl -sSx "$u" -I "https://www.google.com" --max-time 8 >/dev/null 2>&1
}

cleanup_route() {
  local idx="$1"
  docker rm -f "${TUN_NAME_BASE}${idx}" >/dev/null 2>&1 || true
  rm -f "resolv_${idx}.conf" || true
}

start_route() {
  local idx="$1"
  local upstream="$2"
  local t="${TUN_NAME_BASE}${idx}"
  local resolv_file="resolv_${idx}.conf"

  echo "------------------------------------------------------------"
  echo "[ROUTE $idx] Upstream: $upstream"

  # 0) Validate
  if ! validate_socks "$upstream"; then
    echo "[ROUTE $idx] ‚ùå Upstream SOCKS5 URL kh√¥ng h·ª£p l·ªá ‚Üí b·ªè qua."
    return 0
  fi

  # 1) Probe (kh√¥ng b·∫Øt bu·ªôc, nh∆∞ng gi√∫p b·ªè proxy ch·∫øt)
  if ! probe_proxy "$upstream"; then
    echo "[ROUTE $idx] ‚ùå Upstream kh√¥ng ph·∫£n h·ªìi (probe fail) ‚Üí b·ªè qua."
    return 0
  fi

  # 2) Cleanup c≈©
  cleanup_route "$idx"

  # 3) resolv.conf b√™n trong namespace tun
  cat > "$resolv_file" <<EOF
options ndots:0
nameserver ${TUN_RESOLVER}
EOF

  # 4) Start tun2socks
  echo "[ROUTE $idx] Kh·ªüi ch·∫°y tun2socks..."
  docker run -d --name "$t" --restart=always \
    --cap-add=NET_ADMIN \
    -v /dev/net/tun:/dev/net/tun \
    -v "$PWD/$resolv_file":/etc/resolv.conf:ro \
    -e PROXY="$upstream" \
    -e LOGLEVEL="$TUN_LOGLEVEL" \
    -e EXTRA_COMMANDS="ip rule add iif lo ipproto udp dport 53 lookup main;" \
    "$IMG_TUN" >/dev/null || { echo "[ROUTE $idx] ‚ùå L·ªói kh·ªüi ch·∫°y"; return 0; }

  # 5) MTU (t√πy ch·ªçn)
  if [[ -n "$TUN_MTU" ]]; then
    docker exec "$t" sh -c "ip link set dev tun0 mtu $TUN_MTU || true" >/dev/null 2>&1 || true
  fi

  # 6) Ki·ªÉm tra IP
  echo "[ROUTE $idx] ‚úÖ S·∫µn s√†ng. IP egress:"
  docker run --rm --network=container:"$t" curlimages/curl:latest -s https://ifconfig.me || true
  echo
  echo "[ROUTE $idx] G·∫Øn container client v√†o tuy·∫øn n√†y b·∫±ng:"
  echo "  docker run ... --network=container:${t} <image> ..."
}

status_all() {
  local i=1
  for _ in "${UPSTREAMS[@]}"; do
    local t="${TUN_NAME_BASE}${i}"
    if docker ps --format '{{.Names}}' | grep -qx "$t"; then
      printf "[STATUS] %s IP: " "$t"
      docker run --rm --network=container:"$t" curlimages/curl:latest -s https://ifconfig.me || true
      echo
    else
      echo "[STATUS] $t: not running"
    fi
    ((i++))
  done
}

down_all() {
  echo "[CLEANUP] Xo√° to√†n b·ªô tuy·∫øn..."
  local i=1
  for _ in "${UPSTREAMS[@]}"; do
    cleanup_route "$i"
    ((i++))
  done
  echo "[DONE]"
}

# ===================== CLI =====================
case "${1:-up}" in
  up)
    i=1
    for up in "${UPSTREAMS[@]}"; do
      start_route "$i" "$up"
      ((i++))
      sleep 0.2
    done
    echo
    echo "‚úÖ ƒê√É KH·ªûI T·∫†O (ho·∫∑c b·ªè qua) ${#UPSTREAMS[@]} tuy·∫øn."
    echo "üëâ D√πng: docker run ... --network=container:tunN ..."
    ;;
  status) status_all ;;
  down)   down_all ;;
  *)
    echo "Usage: $0 [up|status|down]"
    exit 1
    ;;
esac
